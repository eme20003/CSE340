<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%# messages() %>

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

<div className="addClassificationView">
    <form id="classificationForm" action="/inv/addClassification" method="post">
        <label for="classification_name">Classification Name:
        <input type="text" id="classification_name" name="classification_name" required>

        <input type="submit" id="classificationButton" title="Submit">
    </form>
</div>