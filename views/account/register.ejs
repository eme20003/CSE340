<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%# messages() %>.

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    <div class="registerForm">
    <form id="registerForm" action="/account/register" method="post">
    <label for="account_firstname">First Name: </label>
    <br>
    <input type="text" id="account_firstname" name="account_firstname" required>
    <br>
    <label for="account_lastname">Last Name:</label>
    <br>
    <input type = "text" id="account_lastname" name="account_lastname" required>
    <br>
    <label for="account_email">Email Address:</label>
    <br>
    <input type = "email" id="account_email" name="account_email" required placeholder= "Enter a valid email address">
    <br>
    <label for="account_password">Password:</label>
    <br>
    <input type = "text" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <br>
    <input type="submit" id="register_button" title="Register">
    </form>
    <p> Already Have an Account? <a href="/account/login"> Click here to sign in!</a> </p>
    </div>